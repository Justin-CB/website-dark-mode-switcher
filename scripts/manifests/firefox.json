{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_extensionNameShort__",
  "version": "0.1",
  "author": "rugk",

  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/rugk/dark-mode-website-switcher/",

  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon-small-dark.svg",
    "default_title": "__MSG_browserActionButtonTitle__",
    "default_popup": "options/options.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "/content_scripts/common.js",
        "/content_scripts/applyColorSchemeJs.js",
        "/content_scripts/applyColorSchemeCss.js",
        "/content_scripts/updateRequest.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "background": {
    "page": "background/background.html"
  },

  "content_security_policy": "default-src 'self'",
  "default_locale": "en",

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "applications": {
    "gecko": {
      "id": "dark-mode-website-switcher@rugk.github.io",
      "strict_min_version": "63.0a1"
    }
  }
}
